{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build​",
      "command": "gulp",
      "args": [
        "build"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      // "dependsOrder": "sequence",
      // "dependsOn": [
      //   "spelling-all",
      //   "prose-all"
      // ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": {
        "owner": "build",
        "source": "markdown-lint",
        "severity": "warning",
        "fileLocation": "absolute",
        "pattern": [
          {
            "regexp": "'(.+?)' (\\d+,\\d+,\\d+,\\d+) (.*)",
            "file": 1,
            "location": 2,
            "message": 3
          }
        ]
      },
    },
    {
      "label": "spelling-all",
      "type": "gulp",
      "task": "spelling",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": {
        "owner": "spelling",
        "source": "spelling",
        "severity": "error",
        "fileLocation": "absolute",
        "pattern": [
          {
            "regexp": "'(.+?)' (\\d+):(\\d+) (.+ ->.*)",
            "file": 1,
            "line": 2,
            "column": 3,
            "message": 4
          }
        ]
      }
    },
    {
      "label": "prose​-all",
      "type": "gulp",
      "task": "prose",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": {
        "owner": "prose",
        "source": "prose-lint",
        "severity": "warning",
        "fileLocation": "absolute",
        "pattern": [
          {
            "regexp": "'(.+)' (\\d+):(\\d+):(\\d+) (.*)",
            "file": 1,
            "line": 2,
            "column": 3,
            "endColumn": 4,
            "message": 5
          }
        ]
      }
    },
    {
      "label": "lint-all​",
      "type": "gulp",
      "task": "lint",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": {
        "owner": "build",
        "source": "markdown-lint",
        "severity": "warning",
        "fileLocation": "absolute",
        "pattern": [
          {
            "regexp": "'(.+?)' (\\d+,\\d+,\\d+,\\d+) (.*)",
            "file": 1,
            "location": 2,
            "message": 3
          }
        ]
      }
    }
  ]
}