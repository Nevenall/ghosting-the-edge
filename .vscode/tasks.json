 {
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [{
          "type": "gulp",
          "task": "build",
          "group": {
             "kind": "build",
             "isDefault": true
          },
          "problemMatcher": {
             "owner": "build",
             "source": "markdown-lint",
             "severity": "warning",
             "fileLocation": "absolute",
             "pattern": [{
                "regexp": "'(.+?)' (\\d+,\\d+,\\d+,\\d+) (.*)",
                "file": 1,
                "location": 2,
                "message": 3
             }]
          }
       },
       {
          "label": "spelling",
          "type": "gulp",
          "task": "spelling",

          "problemMatcher": {
             "owner": "spelling",
             "source": "spelling",
             "severity": "error",
             "fileLocation": "absolute",
             "pattern": [{
                "regexp": "'(.+?)' (\\d+):(\\d+) (.+ ->.*)",
                "file": 1,
                "line": 2,
                "column": 3,
                "message": 4
             }]
          }
       },
